{% extends 'base.html.twig' %}

{% block title %}Hello NftTypeController!{% endblock %}

{% block body %}
<div class="container w-75">
    <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Designation</th>
            <th scope="col">Action</th>
          </tr>
        </thead>
        <tbody>
        {% for type in types %}
          <tr>
            <th scope="row">{{ type.id }}</th>
            <td>{{ type.designation }}</td>
            <td>
                <a href="{{ path('app_nft_type_remove', { 'id':type.id }) }}"><i class="bi bi-trash"></i></a>
                <a href="{{ path('app_nft_type_update', { 'id':type.id }) }}"><i class="bi bi-pencil"></i></a>
            </td>
          </tr>
        {% endfor %}
        </tbody>
      </table>
</div>
{% endblock %}
